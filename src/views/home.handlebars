<div class="alert alert-primary col-md-8 mx-auto mt-5" role="alert">
    <div class="row">
        <div class="col-9">
            <h3>Bienvenido {{nombre}}</h3>
        </div>
        <div class="col-3">
        <form action="/logout" method="get" name="logout">
            <button type="submit" class="form-control btn btn-primary submit px-3">Desloguear</button>
        </form>
        </div>
    </div>
</div>
<div class="col-md-6 mx-auto text-center mt-5">
    <div class="header-title">
        <h2 class="wv-heading--subtitle">
            Agregar un producto
        </h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8 mx-auto">
        <div class="myform form ">
            <form action="" method="" name="productos" onsubmit="enviarProducto(event)">
                <div class="form-group">
                    <input type="text" name="title" id="title" class="form-control my-input" id="title" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <input type="text" name="price" id="price" class="form-control my-input" id="price" placeholder="Precio" required>
                </div>
                <div class="form-group">
                    <select class="form-control b-select" name="thumbnail" id="thumbnail" required>
                        <option value="" disabled selected>Selecciona una fruta</option>
                        <option value="anana">ananá</option>
                        <option value="banana">banana</option>
                        <option value="cereza">cereza</option>
                        <option value="durazno">durazno</option>
                        <option value="frutilla">frutilla</option>
                        <option value="manzana">manzana</option>
                        <option value="naranja">naranja</option>
                        <option value="pera">pera</option>
                        <option value="sandia">sandía</option>
                        <option value="uva">uva</option>
                    </select>
                </div>
                <div class="text-center ">
                    <button                    
                    type="submit" 
                    class=" btn btn-block send-button tx-tfm"
                    >Agregar producto</button>
                </div>
                <div class="col-md-12 ">
                    <div class="login-or">
                        <hr class="hr-or">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

